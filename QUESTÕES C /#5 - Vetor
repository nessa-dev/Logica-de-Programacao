/******************************************************************************
Leia um vetor de 10 posicões. Contar e escrever quantos valores pares 
ele possui.

*******************************************************************************/

#include <stdio.h>

int main()
{
   int vetor[10], par = 0, i;
   
   // Ler 10 posições
   for(i = 0; i < 10; i++) {
       printf("Informe um número:\n");
       scanf("%d", &vetor[i]);
       
       // Verificar se o número é par
       if(vetor[i] % 2 == 0) {
           par++; // Incrementa o contador de números pares
       }
   }
   
   // Imprime a quantidade de números pares
   printf("\nHá %d números pares\n", par);

   return 0;
}
