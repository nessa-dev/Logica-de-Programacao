/******************************************************************************

 Desenvolva um aplicativo que mostre na tela o resultado da expressão 
 500 + 450 + 400 + 350 + 300 + ... + 50 + 0

*******************************************************************************/

#include <stdio.h>

int main()
{
 
 int i, soma = 0;
 
 for (i = 500; i >= 0; i-=50){
     soma+=i;
    printf("%d + ", i);
 }  
 
    printf("\nO resultado da soma é: %d\n", soma);
    return 0;
    
}
