/******************************************************************************

 Faça um algoritmo que receba um número inteiro e imprima na tela o seu 
 antecessor e o seu sucessor.

*******************************************************************************/

#include <stdio.h>

int main()
{
    int sucessor, antecessor, num;
    
    printf("Informe um número:\n");
    scanf("%d", &num);
    
    antecessor = num - 1;
    sucessor = num + 1;
    
    printf("O sucessor é %d e o antecessor é %d", sucessor, antecessor);
    
 return 0;   
}
  
