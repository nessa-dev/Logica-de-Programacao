/******************************************************************************

Crie um programa que calcule e mostre na tela o resultado da soma 
 entre 6 + 8 + 10 + 12 + 14 + ... + 98 + 100. .

*******************************************************************************/

#include <stdio.h>

int main()
{
 
 int i, soma = 0;
 
 
 for (i = 6; i <= 100; i+=2){
 printf("%d + ", i);
 soma +=i;
}

printf("\nO resultado da soma Ã©: %d\n", soma);
 return 0;
    
}
